<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fifth"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintDimensionRatio="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:text="5"
        android:background="#0000FF"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/seventh"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintDimensionRatio="0.5"
        app:layout_constraintTop_toTopOf="@id/fifth"
        app:layout_constraintBottom_toTopOf="@id/fourth"
        app:layout_constraintStart_toEndOf="@id/fifth"
        android:gravity="center"
        android:text="7"
        android:background="@color/design_default_color_primary_dark"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/fourth"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="2"
        app:layout_constraintTop_toBottomOf="@id/fifth"
        app:layout_constraintStart_toStartOf="@id/fifth"
        app:layout_constraintEnd_toEndOf="@id/seventh"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/third"
        android:layout_width="0dp"
        android:layout_height="75dp"
        app:layout_constraintDimensionRatio="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/teal_700"
        android:contentDescription="third" />

    <ImageView
        android:id="@+id/first"
        android:layout_width="150dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/third"
        app:layout_constraintBottom_toBottomOf="@id/third"
        app:layout_constraintEnd_toStartOf="@+id/third"
        android:background="@color/teal_200"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/sixth"
        android:layout_width="75dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="6" />

    <Button
        android:id="@+id/second"
        android:layout_width="150dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="@id/sixth"
        app:layout_constraintEnd_toEndOf="@id/sixth"
        android:gravity="center"
        android:text="2" />

</androidx.constraintlayout.widget.ConstraintLayout>